#!/usr/bin/env bash


#
# Create the Kubernetes Secrets needed to avoid mounting a volume with the credentials
#

if [ "$DEBUG" == "1" ]; then
    set -x
fi

set -e

if [ -z "$OPENVPN" ]; then
    export OPENVPN="$PWD"
fi
if ! source "$OPENVPN/ovpn_env.sh"; then
    echo "Could not source $OPENVPN/ovpn_env.sh."
    exit 1
fi
if [ -z "$EASYRSA_PKI" ]; then
    export EASYRSA_PKI="$OPENVPN/pki"
fi

cn="$1"
parm="$2"


cat > "${OPENVPN}/open-vpn-secret.yaml" <<EOF
apiVersion: v1
kind: Secret
metadata:
  name: open-vpn
type: Opaque
data:
EOF
# We only need the Server cert and key, the CA cert and the DH file,
# leave the CA key and other private stuff out.
echo "\tkey: $(cat ${EASYRSA_PKI}/private/${OVPN_CN}.key | base64)\n"
echo "\tcert: $(cat ${EASYRSA_PKI}/issued/${OVPN_CN}.crt | base64)\n"
echo "\tca: $(cat ${EASYRSA_PKI}/ca.crt | base64)\n"
echo "\tdh: $(cat ${EASYRSA_PKI}/dh.pem | base64)\n"
